# This is Git's per-user configuration file.
[user]
	name = Peter Tr≈°ko
	email = peter.trsko@gmail.com
[alias]
	pretty-log = log --graph --decorate --stat
	co = checkout
	egrep = grep -E -n
	amend = commit --amend
	push-force = push --force-with-lease --prune
	push-prune = push --prune
[grep]
	lineNumber = true
[commit]
	verbose = true
[push]
	default = simple
[pull]
	ff = only
[rebase]
	autoStash = true
[merge]
	ff = only
	tool = vimdiff
	conflictstyle = merge # diff3 was terrible
[mergetool]
	prompt = true
[mergetool "vimdiff"]
	cmd = nvim -d -O ${LOCAL} ${REMOTE} ${MERGED}
[fetch]
	prune = true
	pruneTags = true
[include]
	path = local.gitconfig
