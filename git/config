[alias]
	pretty-log = log --graph --decorate --stat
	co = checkout
	egrep = grep -E -n
	amend = commit --amend
[grep]
	lineNumber = true
[commit]
	verbose = true
[push]
	default = simple
[pull]
	ff = only
[rebase]
	autoStash = true
[merge]
	ff = only
	tool = vimdiff
	# Include original text in the conflictin file.
	conflictstyle = diff3
[mergetool]
	prompt = true
[mergetool "vimdiff"]
	cmd = nvim -d -O ${LOCAL} ${REMOTE} ${MERGED}
